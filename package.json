{
  "name": "issue-ref",
  "version": "1.0.0",
  "private": true,
  "description": "Reference an issue to a PR",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write ./**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/estrada9166/issue-ref"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "estrada9166",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^12.7.2",
    "husky": "^3.0.4",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && yarn format && git add ."
    }
  }
}